<Window x:Class="WpfAppAssignments.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppAssignments"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local:ScribblePad x:Name="mScribble" Grid.Column="1" Background="Black"/>
        <Button Height="45" Click="Button_Click"  Margin="0,55,0,0" VerticalAlignment="Top"/>
        <Button Height="45" Click="Button_Click_Erase" Margin="0,110,0,0" VerticalAlignment="Top">
            <Image Source="Eraser.png"/>
        </Button>
        <Button Height="45" Click="Button_Click_Clear" Margin="0,165,0,0" VerticalAlignment="Top">
            <Image Source="Allclear.png"/>
        </Button>
        <Button Height="45" Click="Button_Click_Load" Margin="0,220,0,0" VerticalAlignment="Top">
            <Image Source="Load.png"/>
        </Button>
        <Button Height="45" Click="Button_Click_Save" Margin="0,275,0,0" VerticalAlignment="Top">
            <Image Source="Save.png"/>
        </Button>
        <Canvas Height="45" Width="55" Margin="0,55,0,0" VerticalAlignment="Top" Background="Transparent">
            <TextBlock Name="mNThick" Text="{Binding}" Margin="24,27,0,0"/>
            <Ellipse Name="mCircle" HorizontalAlignment="Center" VerticalAlignment="Center"
        Height="1"
        Width="1"
        Canvas.Bottom="24"
        Canvas.Right="28"
        Fill="Black"/>
        </Canvas>
        <Slider Name="mThick" Height="200" Width="20" Minimum="2" Maximum="10" ValueChanged="mThick_ValueChanged" Background="White" VerticalAlignment="Top" HorizontalAlignment="Left" Orientation="Vertical" Margin="0,55,0,0"/>
        <ComboBox Name="mSelect" SelectedIndex="0" Height= "50" VerticalAlignment="Top" SelectionChanged="mSelect_SelectionChanged">
            <ComboBoxItem Background = "White">
                <TextBlock Background = "White" Height="30" Width="40"/>
            </ComboBoxItem>
            <ComboBoxItem Background = "Green">
                <TextBlock Background = "Green" Height="30" Width="40"/>
            </ComboBoxItem>
            <ComboBoxItem Background = "Orange">
                <TextBlock Background = "Orange" Height="30" Width="40"/>
            </ComboBoxItem>
            <ComboBoxItem Background = "Red">
                <TextBlock Background = "Red" Height="30" Width="40"/>
            </ComboBoxItem>
            <ComboBoxItem Background = "Yellow">
                <TextBlock Background = "Yellow" Height="30" Width="40"/>
            </ComboBoxItem>
        </ComboBox>

    </Grid>
</Window>